{
   "compilerOptions": {
      "lib": [
         "es2021"
      ],
      "target": "es2021",
      "module": "commonjs",
      "esModuleInterop": true,
      "strict": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "baseUrl": "./src",
      "rootDir": "./",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "useDefineForClassFields": false,
   },
   "include": ["src/**/*.ts"],
   "exclude": ["node_modules"]
}